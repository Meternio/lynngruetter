---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import lynn from "../assets/lynn.svg";
import { Image } from "astro:assets";

const { blok } = Astro.props;
---

<section
  class="scroll-section"
  {...storyblokEditable(blok)}
  id={blok.id}
  data-scroll-section
>
  {
    blok.content?.map((blok) => {
      return <StoryblokComponent blok={blok} />;
    })
  }
  {
    blok.signature && (
      <div
        class={`scroll-section-signature p-4 ${
          blok.signatureAbsolute ? "absolute w-full bottom-0 left-0" : ""
        }`}
      >
        <Image
          src={lynn}
          alt="Lynn Gruetter's signature"
          width="796"
          height="243"
        />
        <div class="scroll-section-signature-footer pt-4 flex items-center justify-between">
          <span class="">{blok.name}</span>
          <a target="_blank" href="https://www.instagram.com/lynngruetter">
            @lynngruetter
          </a>
        </div>
      </div>
    )
  }
</section>

